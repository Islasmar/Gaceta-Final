div(class="bg-white shadow rounded-lg")
    img(class="object-cover h-72 w-full" src=`/uploads/${propiedades.imagen}` alt=` imagen casa ${propiedades.titulo}`)
    div(class="p-5 space-y-3 rounded")
        h3(class="text-2xl font-bold")= propiedades.titulo
        p(class="text-sm text-gray-600") Habitaciones:  
            span(class="text-gray-800 font-bold")= propiedades.habitaciones
        p(class="text-sm text-gray-600") WC: 
            span(class="text-gray-800 font-bold")= propiedades.wc
        p(class="text-sm text-gray-600") Precio: 
            span(class="text-gray-800 font-bold")= propiedades.precio.nombre
        a(href=`/propiedades/${propiedades.id}` class="bg-aqua text-center block font-bold text-white text-sm p-3 uppercase rounded") Ver propiedades